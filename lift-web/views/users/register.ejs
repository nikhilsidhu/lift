<% layout('layouts/boilerplate')%>

<h1>Register</h1>
<form action="/register" class="needs-validation" method="POST">
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" id="username" class="form-control input-light" name="username" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" class="form-control input-light" name="email" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" class="form-control input-light" name="password" required>
    </div>
    <button class="btn btn-success">Register</button>
</form>