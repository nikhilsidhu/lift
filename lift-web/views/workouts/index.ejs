<% layout('layouts/boilerplate') %>

<h1>Workout Log</h1>
<div class="my-4">
    <a class="btn btn-primary" href="/workouts/new">Add Workout</a>
</div>
<% for (let workout of workouts) { %>
    <div class="card">
        <div class="row">
            <div class="col-md-12 d-flex">
                <div class="card-body">
                    <div>
                        <h5 class="card-title">
                            <a class="btn" href="/workouts/<%=workout._id%>"><%= workout.workoutName %> - <%= workout.workoutDate %></a>
                        </h5>
                    </div>
                </div>
            <div class="ml-auto p-3 align-self-center">

                <form action="/workouts/<%=workout._id%>?_method=DELETE" method="POST">
                    <button>      
                        <svg class="" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </button>
                </form>
            </div>
            </div>
        </div>
    </div>
<% } %>
<i class="bi bi-trash"></i>
