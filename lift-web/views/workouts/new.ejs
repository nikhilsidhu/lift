<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-1 mt-1">
        <!-- Back button -->
        <a href="/workouts">
            <svg id="backbutton" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-compact-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M9.224 1.553a.5.5 0 0 1 .223.67L6.56 8l2.888 5.776a.5.5 0 1 1-.894.448l-3-6a.5.5 0 0 1 0-.448l3-6a.5.5 0 0 1 .67-.223z"/>
            </svg>
        </a>
    </div>
    <div class="col-10 justify-content-center">
        <h1 class="text-center">Create New Workout</h1>

        <form action="/workouts" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Name</label>
                <input class="form-control workout-input" type="text" id="title" name="workout[name]" placeholder="Workout name">
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Date</label>
                <input class="form-control workout-input" type="date" id="date" name="workout[date]" %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Add Workout</button>
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>


