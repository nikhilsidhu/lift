<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-10 offset-1">
        <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= workout.workoutName %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= temporalDate.convertDate(workout.workoutDate).isoMonth%>-<%= temporalDate.convertDate(workout.workoutDate).isoDay%>-<%= temporalDate.convertDate(workout.workoutDate).isoYear%></h6>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <a href="/workouts" class="card-link">Back to Log</a>
              <a href="/workouts/<%= workout._id%>/edit" class="card-link">Edit Workout</a>
              
              <div class="d-inline-block">
                <form action="/workouts/<%=workout._id%>?_method=DELETE" method="POST">
                    <button>      
                        <svg class="" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
