<% layout('layouts/boilerplate')%>

<div class="d-flex flex-column align-items-center mt-5">
  <div class="form form__container mb-3">
    <h1 class="mb-5 fs-2">Register</h1>
    <form action="/register" class="w-75 needs-validation" method="POST">
      <div class="mb-3">
        <input
          type="text"
          id="username"
          class="form-control form__input--text"
          name="username"
          placeholder="Username"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="email"
          id="email"
          class="form-control form__input--text"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="mb-5">
        <input
          type="password"
          id="password"
          class="form-control form__input--text"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <button class="btn--form btn--form--success">Register</button>
    </form>
  </div>
</div>
