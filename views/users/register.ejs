<% layout('layouts/boilerplate')%>


<div class="d-flex flex-column align-items-center">
    <h1>Register</h1>
    <form action="/register" class="w-50 d-block needs-validation" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" class="form-control input-light input--bg-dark" name="username" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-control input-light input--bg-dark" name="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" class="form-control input-light input--bg-dark" name="password" required>
        </div>
        <button class="btn btn-success my-3">Register</button>
    </form>
</div>
